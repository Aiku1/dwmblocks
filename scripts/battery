#!/bin/sh

for battery in /sys/class/power_supply/BAT?
do
   capacity=$(cat "$battery"/capacity) || break
   status=$(sed "s/[Dd]ischarging/ğŸ”‹/;s/[Nn]ot charging/ğŸ›‘/;s/[Cc]harging/ğŸ”Œ/;s/[Uu]nknown/â™»ï¸/;s/[Ff]ull/âš¡/" "$battery"/status)
   remaining=$(acpi | cut -d, -f 3 | xargs | cut -c 1-5)

   [ "$capacity" -le 30 ] && [ "$status" = "ğŸ”‹" ] && warn="â—" && notify-send -u critical "System info" "Battery low. Last plugged in: $(cat /var/lib/upower/history-time-full-*.dat | awk '{ split($0, a," "); print a[1] }' | sed 's/^/echo "/; s/\([0-9]\{10\}\)/`date -d @\1`/; s/$/"/' | bash | tail -n1) \n"

   ( [ ! -z "$remaining" ] && printf " %s%s %s%% (%s) \0" "$status" "$warn" "$capacity" "$remaining" ) ||
        printf " %s%s %s%% \0" "$status" "$warn" "$capacity"
   unset warn
done | sed 's/ *$//'
